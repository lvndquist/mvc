{% extends "base.html.twig" %}

{% block title %}Library{% endblock %}

{% block body %}
    <main>
        <h1>
            <a class = "back-arrow" href = "{{path('library_show_all')}}"><i class="fa-solid fa-chevron-left"></i></a>
            Delete
        </h1>
        <div class = "library-detail-containter">
            <img class = "library-img" src="{{ asset(book.imageUrl) ~ ".jpeg" }}" alt="">
            <form class = "add-book" method="post" action="{{ path("post_delete_book_by_id", { "id": book.id }) }}">
                <input class = "book-data" type="text" name="title" placeholder = "Title" value = "{{ book.title }}" disabled>
                <input class = "book-data" type="text" name="author" placeholder = "Author" value = "{{ book.author }}" disabled>
                <input class = "book-data" type="text" name="isbn" placeholder = "ISBN" value = "{{ book.isbn }}" disabled>
                <input class = "book-data" type="text" name="url" placeholder = "Image URL" value = "{{ book.imageUrl }}" disabled>
                <input class = "book-add-btn" type="submit" name="do_it" value="Remove">
            </form>
        </div>
    </main>
{% endblock %}
